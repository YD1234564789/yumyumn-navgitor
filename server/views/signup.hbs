<div class="row justify-content-center align-items-center" style="height: 600px">
  <div class="col-md-5 shadow-lg px-5 py-4 mb-5 bg-white rounded-3">
    <div class="mb-4 text-center">
      <h1 class="h3 font-weight-normal mb-3 fw-bold">註冊</h1>
    </div>

    <form class="form-signup" action="/signup" method="POST" style="width: 100%;">
      <div class="mb-2">
        <label class="form-label px-3 text-muted" for="name">名字</label>
        <input type="text" id="name" name="name" class="form-control rounded-pill bg-light" value="{{ name }}" placeholder="你的名字" required autofocus>
      </div>
      <div class="mb-2">
        <label class="form-label px-3 text-muted" for="email">信箱</label>
        <input type="text" id="email" name="email" class="form-control rounded-pill bg-light" value="{{ email }}" placeholder="name@mail.com" required>
      </div>
      <div class="mb-2">
        <label class="form-label px-3 text-muted" for="password">密碼</label>
        <input type="password" id="password" name="password" class="form-control rounded-pill bg-light"  value="{{ password }}" required>
      </div>
      <div class="mb-4">
        <label class="form-label px-3 text-muted" for="passwordCheck">確認密碼</label>
        <input type="password" id="passwordCheck" name="passwordCheck" class="form-control rounded-pill bg-light" value="{{ passwordCheck }}" placeholder="再次輸入密碼"
          required>
      </div>
      <div class="d-grid gap-2 mb-4 ">
        <button class="btn btn-primary btn-block fw-bold rounded-pill" type="submit">提交</button>
      </div>
      <hr>
      <div class="text-center">
        <a href="/login" class="btn btn-outline-secondary btn-sm fw-bold">登入頁</a>
      </div>
    </form>
  </div>
</div>